<div class="container text-center">
    <h2 class="font-weight-bold">List of Activities</h2>
    <hr />
    <div class="row">
        {{#each activities}}
        <div class="col-lg-4 col-md-4 col-sm-6">
            <section class="activity-summary">
                <p class="font-weight-bold h4">
                    {{title}} <br />
                </p>
                <div id="actlist">
                    <img src="{{this.imageUrl}}" alt="" width="400" height="400">
                </div>
                <div class="text-center mt-3">
                    <form action="/activities/like/{{_id}}" method="POST">
                        <button class="btn btn-danger like-button">
                            <span class="ml-2" id="{{title}}-likes">{{like.length}}</span>
                            <i class="fas fa-heart"></i>
                        </button>
                    </form>
                    
                </div>
                <div class="text-center mt-2">
                    <form action="/activities/{{title}}">
                        <button class="btn btn-primary">Details</button>
                    </form>
                </div>
            </section>
            <hr />
        </div>
        {{/each}}
    </div>
</div>